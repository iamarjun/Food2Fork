<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Material color attributes (light theme) -->

    <style name="Base.Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <style name="Base.Theme.App" parent="Base.Theme">
        <item name="colorPrimary">@color/primaryColor</item> <!--toolbar color-->
        <item name="colorPrimaryDark">@color/primaryDarkColor</item> <!--status bar color-->
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item> <!--status bar color-->
        <item name="colorSecondary">@color/secondaryColor</item> <!--fab icon color-->
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item> <!--use sparingly-->

        <item name="colorSurface">@color/white_50</item>
        <item name="colorError">@color/red_600</item>

        <item name="android:colorBackground">@color/white_50</item>

        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>

        <item name="colorOnPrimary">@color/black_900</item>
        <item name="colorOnSecondary">@color/white_50</item>
        <item name="colorOnBackground">@color/black_900</item>
        <item name="colorOnSurface">@color/black_900</item>
        <item name="colorOnError">@color/white_50</item>

        <!-- Apply themes to views globally -->

        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert</item> <!-- this applies a default theme for all alert dialogs -->
        <item name="bottomSheetDialogTheme">@style/App.Theme.BottomSheet</item> <!-- this applies a default theme for all bottom sheets  -->
        <item name="toolbarStyle">@style/ToolbarAppearance</item> <!-- this applies a default theme for all toolbars -->
        <item name="tabStyle">@style/App.Theme.TabLayout</item> <!-- this applies a default theme for all tab-layouts -->
        <item name="materialCardViewStyle">@style/App.Theme.MaterialCardView</item> <!-- this applies a default theme for all material card view-->
        <item name="materialButtonStyle">@style/App.Theme.Button</item> <!-- this applies a default theme for all material buttons -->
    </style>

    <!-- default app theme applied to Application class in AndroidManifest.xml -->
    <style name="Theme.MyApp" parent="Base.Theme.App" />

</resources>
